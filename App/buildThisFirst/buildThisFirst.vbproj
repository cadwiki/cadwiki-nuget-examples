  <Target Name="autoincrementAssemblyInfoVbFiles" BeforeTargets="Build">
    <Exec Command="echo target autoincrementAssemblyInfoVbFiles in buildThisFirst.vbproj." />
	
	<!-- Autoincrement -->
	<ItemGroup>
      <AssemblyInfoFiles Include="$(BuildRoot)\buildThisFirst\**\AssemblyInfo.vb" />
