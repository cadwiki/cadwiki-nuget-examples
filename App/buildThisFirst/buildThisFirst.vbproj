  <UsingTask AssemblyFile="..\packages\MSBuild.Extension.Pack.1.9.1\tools\net40\MSBuild.ExtensionPack.dll" TaskName="AssemblyInfo" />
  <PropertyGroup>
    <BuildRoot>$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), build.root))</BuildRoot>
  </PropertyGroup>
  <Target Name="autoincrementAssemblyInfoVbFiles" BeforeTargets="Build">
    <Exec Command="echo buildThisFirst.vbproj target autoincrementAssemblyInfoVbFiles automatically updating all AssemblyInfo.vb with new autoincremented version number." />
    <GetAssemblyIdentity AssemblyFiles="$(TargetPath)">
      <Output TaskParameter="Assemblies" ItemName="MyAssemblyIdentities" />
    </GetAssemblyIdentity>
	<ItemGroup>
      <AssemblyInfoFiles Include="$(BuildRoot)\**\AssemblyInfo.vb" />
    </ItemGroup>
    <!-- Autoincrement -->
	<Exec Command="echo %(MyAssemblyIdentities.Version)" />
	<Exec Command="echo @(MyAssemblyIdentities)" />
		<GetAssemblyIdentity AssemblyFiles="$(TargetPath)">
			<Output TaskParameter="Assemblies" ItemName="myAssemblyInfo"/>
		</GetAssemblyIdentity>
		<PropertyGroup>
			<Pattern>(\d+)(.)(\d+)(.)(\d+)(.)(\d+)</Pattern>
			<In>%(myAssemblyInfo.Version)</In>
			<Out1>$([System.Text.RegularExpressions.Regex]::Match($(In), $(Pattern), System.Text.RegularExpressions.RegexOptions.Multiline).Groups[1].Value)</Out1>
			<Out2>$([System.Text.RegularExpressions.Regex]::Match($(In), $(Pattern), System.Text.RegularExpressions.RegexOptions.Multiline).Groups[3].Value)</Out2>
			<Out3>$([System.Text.RegularExpressions.Regex]::Match($(In), $(Pattern), System.Text.RegularExpressions.RegexOptions.Multiline).Groups[5].Value)</Out3>
			<Out4>$([System.Text.RegularExpressions.Regex]::Match($(In), $(Pattern), System.Text.RegularExpressions.RegexOptions.Multiline).Groups[7].Value)</Out4>
		</PropertyGroup>
	<Exec Command="echo Existing info: $(Out1).$(Out2).$(Out3).$(Out4)" />
	<AssemblyInfo AssemblyInfoFiles="@(AssemblyInfoFiles)" AssemblyMajorVersion="$(Out1)" AssemblyMinorVersion="$(Out2)" AssemblyBuildNumber="$(Out3)" AssemblyRevision="$(Out4)" />
	<AssemblyInfo AssemblyInfoFiles="@(AssemblyInfoFiles)" AssemblyFileMajorVersion="$(Out1)" AssemblyFileMinorVersion="$(Out2)" AssemblyFileBuildNumber="$(Out3)" AssemblyFileRevision="$(Out4)" />
	<Exec Command="echo Assemblies that were autoincremented:" />
	<Message Text="@(AssemblyInfoFiles, '%0a')" Importance="high" />
	<Exec Command="echo Updated the assemblies above to version $(Out1).$(Out2).$(Out3).$(Out4)" />
  </Target>
